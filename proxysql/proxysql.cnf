mysql_query_rules =
(
    { rule_id = 1, active = 1, match_pattern = "^SELECT.*FROM tarjetas", destination_hostgroup = 20, apply = 1 },
    { rule_id = 2, active = 1, match_pattern = "^SELECT.*FROM cliente_tarjeta", destination_hostgroup = 20, apply = 1 },
    { rule_id = 3, active = 1, match_pattern = "^SELECT.*FROM campana", destination_hostgroup = 21, apply = 1 },
    { rule_id = 4, active = 1, match_pattern = "^SELECT.*FROM cliente_campana", destination_hostgroup = 21, apply = 1 },
    { rule_id = 5, active = 1, match_pattern = ".*sucursal='sucursal1'", destination_hostgroup = 10, apply = 1 },
    { rule_id = 6, active = 1, match_pattern = ".*sucursal='sucursal2'", destination_hostgroup = 11, apply = 1 },
    { rule_id = 7, active = 1, match_pattern = ".*sucursal='sucursal3'", destination_hostgroup = 12, apply = 1 }
)
